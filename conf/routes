# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                                PageViewer.page(urlId:'index')
GET     /page/{urlId}                                    PageViewer.page
GET     /pages/tag/{tagName}                             PageViewer.pagesTag
*       /pages/search                                    PageViewer.searchPage
GET     /newPage                                         PageController.newPage(action:'create',otherUrlId:'',language:'')
GET     /bootstrap/{action}/{otherUrlId}                 PageController.newPage(language:'')
GET     /page/{action}/{otherUrlId}/from/{language}      PageController.newPage
POST    /doNewPage                                       PageController.doNewPage(action:'create',otherUrlId:'',otherLanguage:'')
POST    /doNewPage/{action}/{otherUrlId}/{otherLanguage} PageController.doNewPage
GET     /captcha/{randomID}                              BlogViewer.captcha
GET     /blog                                            BlogViewer.index
GET     /post/{title}                                    BlogViewer.show
GET     /posts/{tagString}                               BlogViewer.listTagged
GET     /newPost                                         BlogController.newPost(action:'create',otherTitle:'',language:'')
GET     /post/{action}/{otherTitle}/from/{language}      BlogController.newPost
POST    /doNewPost                                       BlogController.doNewPost(action:'create',otherTitle:'',otherLanguage:'')
POST    /doNewPost/{action}/{otherTitle}/{otherLanguage} BlogController.doNewPost
POST    /post/{title}/comments                           BlogController.postComment
