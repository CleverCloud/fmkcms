# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /page/{urlId}                                PageViewer.page
GET     /pages/tag/{tagName}                         PageViewer.pagesTag
*       /pages/search                                PageViewer.searchPage
GET     /newPage                                     PageController.newPage(otherUrlId:'',language:'')
GET     /page/translate/{otherUrlId}/from/{language} PageController.newPage
POST    /doNewPage                                   PageController.doNewPage(otherUrlId:'',otherLanguage:'')
POST    /doNewPage/{otherUrlId}/{otherLanguage}      PageController.doNewPage
GET     /captcha                                     BlogViewer.captcha
GET     /blog                                        BlogViewer.index
GET     /post/{title}                                BlogViewer.show
GET     /posts/{tag}                                 BlogViewer.listTagged
GET     /newPost                                     BlogController.newPost(otherTitle:'',language:'')
GET     /post/translate/{otherTitle}/from/{language} BlogController.newPost
POST    /doNewPost                                   BlogController.doNewPost(otherTitle:'',otherLanguage:'')
POST    /doNewPost/{otherTitle}/{otherLanguage}      BlogController.doNewPost
POST    /post/{title}/comments                       BlogController.postComment
